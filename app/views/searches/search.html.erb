<div class="container px-5 px-sm-0 mt-5">
  <div class="row">
    <% if member_signed_in? %>
    <div class="col-3 card card float-right" style="width: 18rem;">
      <div class="card-body">
        <p class="card-text"><%= render 'member/members/info', member: @member %></p>
      </div>
    </div>
    <% end%>
    <div class="col-6 m-0 p-0 mx-auto">
    <% if @model == 'member' %>
  	  <h3>Members search for "<%= @content %>"</h3>
      <%= render 'member/members/index', posts: @records %>
    </div>
    <div class="col-6 m-0 p-0 mx-auto">
    <% elsif @model == 'post' %>
	    <h3>Posts search for "<%= @content %>"</h3>
      <%= render 'member/posts/index', posts: @records %>
    <% end %>
    </div>
    <div class="col-2 card card float-right" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><strong>ジャンル</strong></h5>
        <p class="card-text"><%= render 'homes/genre', genres: @genres %></p>
      </div>
    </div>
  </div>
</div>
