<%= form_with model:post, local:true do |f| %>
　　　<div class="form-group">
　　　  <label>タイトル</label>
　　　  <%= f.text_field :title, placeholder: "タイトル", class:"form-control w-50 " %>
　　　</div>
　　　<div class="form-group">
　　　  <label>ジャンル</label>
　　　  <%= f.collection_select :genre_id, genres, :id, :name, include_blank: "-- 選択して下さい --" %>
　　　  <label>ハッシュタグ</label>
　　　  <%= f.text_field :tags, placeholder: "#15字以内　例）#数学", size:"55x3" %>
　　　</div>
　　　<div class='form-group-article mx-auto'>
　　　  <label>本文</label>
　　　  <%= f.text_area :article, 'data-provider': :summernote %>
　　　</div>
　　　<div class="form-group">
　　　  <label>引用記事リンク</label>
　　　  <%= f.text_field :link, placeholder: "リンク", class:"form-control w-25 " %>
　　　</div>
　　　<div class="form-group">
　　　  <%= f.submit class: "btn btn-success" %>
　　　</div>
　　　<% end %>