<div class= "container text-center mt-5">
<h2>登録がお済みの方はこちらから</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="d-flex form-group mt-4">
      <span class= "col-3 p-2 offset-md-3"><%= f.label :メールアドレス %></span>
      <span class= "col-3 m-2"><%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></span>
   </div>

  <div class="d-flex form-group">
      <span class= "col-3 p-2 offset-md-3"><%= f.label :パスワード %></span>
      <span class= "col-3 m-2"><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></span>
   </div>



  <div class="actions offset-md-6">
    <%= f.submit "ログイン", class: "login btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class='offset-md-6'>
  <%= render "member/shared/links" %>
</div>

</div>