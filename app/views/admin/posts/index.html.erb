<div class="container mt-5">
  <div class="row">
    <h2>投稿記事一覧</h2>
       <table class="table table-hover table-inverse">
         <% @posts.each do |post| %>
        <tbody>
          <tr>
            <td>
              <%= post.created_at.strftime('%Y/%m/%d') %>に投稿 <%= post.member.name %><br>
              <%= link_to admin_post_path(post.id) do %><strong><%= post.title %></strong><% end %><br>
              <i class="fas fa-heart" style="color :#FF0033;"></i><%= post.favorites.count %><br>
              <%= render_with_hashtags(post.tags) %>
            </td>
         　　 <td>　<%= link_to "詳細", admin_post_path(post.id), class:"btn btn-success" %>
         　　   <% if post.status == false %>
	  	   　　 <strong class='ture' style="color :limegreen;">表示</strong>
	  	   　　 <% else %>
	  	   　　 <strong class='false' style="color :#d3d3d3;">非表示</strong>
	  	   　　 <% end %>

	  	   　</td>
	  	    </tr>
        </tbody>
        <% end %>


      </table>
  </div>
</div>
