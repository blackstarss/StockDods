<div class="container px-5 px-sm-0 mt-5">

  <div class="row">
    <label class="col-2"><strong>投稿者</strong></label>
    <%= link_to admin_member_path(@member) do %><%= @post.member.name %><% end %>
  </div>

  <div class="row mt-3">
    <label class="col-2"><strong>タイトル</strong></label>
    <%= @post.title %>
  </div>
  <div class="row mt-3">
    <label class="col-2"><strong>ジャンル</strong></label>
   <%= @post.genre.name %>
  </div>
  <div class="row mt-3">
    <label class="col-2"><strong>ハッシュタグ</strong></label>
   <%= render_with_hashtags(@post.tags) %>
  </div>
  <div class="row mt-3">
    <label class="col-2"><strong>本文</strong></label>
   <%== @post.article %>
   <!--エスケープ処理-->
  </div>

  <div class="row mt-3">
    <label class="col-2"><strong>引用記事リンク</strong></label>
    <%= @post.link %>
  </div>
　<div class="row">
　  <label class="col-2"><strong>ステータス</strong></label>
　  <% if @post.status == false %>
	   <strong class='ture' style="color :limegreen;">表示</strong>
	      <% else %>
	   <strong class='false' style="color :#d3d3d3;">非表示</strong>
	      <% end %>
　</div>
　<div>
　	<%= link_to "編集", edit_admin_post_path(@post), class:"btn btn-success offset-md-3"%>
　</div>
