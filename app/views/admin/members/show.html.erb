<div class="container mt-5">
  <div class="row">
    <div class="col-6 m-0 p-0 mx-auto">
    <h2><%= @member.name %>さん記事一覧</h2>
      <table class="table table-hover">
        <% @posts.each do |post| %>
        <tbody>
          <tr>
            <td>
              <%= post.created_at.strftime('%Y/%m/%d') %>に投稿 <%= post.member.name %><br>
              <%= link_to admin_post_path(post.id) do %><strong><%= post.title %></strong><% end %><br>
              ♥<%= post.favorites.count %><br>
              コメント数：<%= Comment.count %>
            </td>
            <td><%= link_to "編集", edit_admin_post_path(post), class:"btn btn-success float-right" %>
        　　<% if post.status == false %>
	  	    　<strong class='ture' style="color :limegreen;">表示</strong>
	  	    　<% else %>
	  	    　<strong class='false' style="color :#d3d3d3;">非表示</strong>
	  	    　<% end %>
	  	    　</td>
	  	    </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>