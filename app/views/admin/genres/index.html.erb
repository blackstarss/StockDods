<div class="container px-5 px-sm-0 mt-5">
  <div class= "col-6 m-0 p-0 mx-auto">
    <h3 class='text-center'>ジャンル一覧・追加</h3>
    <%= render 'form', genre: @genre %>
  </div>


  <div class="row ">
    <div class= "col-6 m-0 p-0 mx-auto">
      <table class="table table-hover table-inverse5">
        <thead class="thead-dark">
          <tr class="table-head" style="color:#fff; background:#005ab3;">
            <th>ジャンル</th>
            <th> </th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
	  	    <tr>
              <td class="col-3 px-0"><%= genre.name %></td>
              <td class="col-1 px-0"><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-primary" %></td>
              <td class="col-1 px-0"><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, class: "btn btn-danger" %></td>
	  	    </tr>
  	  	  <% end %>
  	  	</tbody>
      </table>
    </div>
  </div>
</div>